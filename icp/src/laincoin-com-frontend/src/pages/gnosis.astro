---
// src/pages/gnosis.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="LainCoin Gnosis DAO">
  <main class="min-h-screen p-8 bg-gradient-to-tr from-[#00FFC2] via-[#FF00E0] to-[#007BFF] text-white font-mono">
    <h2 class="text-5xl font-bold text-center mb-10 drop-shadow">LainCoin Gnosis DAO</h2>

    <section class="bg-white/10 p-6 rounded-lg max-w-3xl mx-auto mb-6 shadow-lg">
      <h3 class="text-2xl font-bold mb-4">Connect Wallet</h3>
      <p>[Gnosis Safe or Metamask connection goes here]</p>
    </section>

    <section class="bg-white/10 p-6 rounded-lg max-w-3xl mx-auto mb-6 shadow-lg">
      <h3 class="text-2xl font-bold mb-4">Token Stats</h3>
      <p>Total Supply: 100,000,000,000 LAIN</p>
      <p>Token Address: <code>0xYourGnosisTokenAddress</code></p>
    </section>

    <section class="bg-white/10 p-6 rounded-lg max-w-3xl mx-auto shadow-lg">
      <h3 class="text-2xl font-bold mb-4">DAO Proposals</h3>
      <ul>
        <li>No proposals yet. Connect your wallet and submit one.</li>
      </ul>
    </section>
  </main>
</BaseLayout>