---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="LainCoin">
  <main class="landing">
    <h1 class="title">Welcome to LainCoin</h1>
    <p class="subtitle">『 Close the world, open the next 』</p>

    <div class="button-group">
      <a href="/icp" class="vaporwave-button">Launch ICP DAO Interface</a>
      <a href="/gnosis" class="vaporwave-button">Launch Gnosis DAO Interface</a>
      <a href="/scrt" class="vaporwave-button">Launch SCRT DAO Interface</a>
    </div>
  </main>

  <style>
    .landing {
      text-align: center;
      padding: 3rem;
      min-height: 100vh;
      font-family: monospace;
      background: linear-gradient(135deg, #ff9aff, #957DAD, #6A0572);
      color: #fff;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .title {
      font-size: 4rem;
      font-weight: 900;
      letter-spacing: 0.15em;
      text-shadow: 0 0 5px #fff, 0 0 10px #ff00cc, 0 0 20px #3333ff;
    }

    .subtitle {
      margin-top: 1rem;
      font-size: 1.5rem;
      color: #ffcaff;
      font-style: italic;
    }

    .button-group {
      margin-top: 2.5rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .vaporwave-button {
      background: linear-gradient(90deg, #ff6ec4, #7873f5);
      padding: 0.75rem 2rem;
      border: none;
      border-radius: 999px;
      font-weight: bold;
      text-transform: uppercase;
      text-decoration: none;
      color: white;
      box-shadow: 0 0 10px #ff00cc, 0 0 20px #3333ff;
      transition: all 0.3s ease;
    }

    .vaporwave-button:hover {
      transform: scale(1.05);
      box-shadow: 0 0 20px #ff00cc, 0 0 40px #3333ff;
    }
  </style>
</BaseLayout>
